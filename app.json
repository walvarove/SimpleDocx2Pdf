{
  "name": "docx2pdf",
  "description": "A REST API service that converts DOCX files to PDF using LibreOffice",
  "repository": "https://github.com/walvarove/docx2pdf",
  "keywords": ["go", "docx", "pdf", "converter", "api"],
  "env": {
    "PORT": {
      "description": "The port the server listens on",
      "value": "8080"
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file size in bytes",
      "value": "10485760"
    },
    "TEMP_DIR": {
      "description": "Directory for temporary files",
      "value": "/tmp/docx2pdf"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/go"
    }
  ]
} 